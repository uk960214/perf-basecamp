{
  "compilerOptions": {
    "target": "ES2015",
    "jsx": "react-jsx",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["dom", "dom.iterable", "esnext"],
    "noUnusedLocals": true,
    "allowJs": true,
    "sourceMap": true,
    "removeComments": false, // webpack chunk naming에 필요, 주석은 webpack에서 제거
    "noEmit": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "skipLibCheck": true
  },
  "compileOnSave": true,
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
